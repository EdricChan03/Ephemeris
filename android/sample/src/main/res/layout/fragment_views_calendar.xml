<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <com.boswelja.ephemeris.views.EphemerisCalendarView
      android:id="@+id/month_calendar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toTopOf="@id/week_calendar"/>

  <com.boswelja.ephemeris.views.EphemerisCalendarView
      android:id="@+id/week_calendar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/month_calendar"
      app:layout_constraintBottom_toTopOf="@id/switch_calendar"/>

  <com.boswelja.ephemeris.views.EphemerisCalendarView
      android:id="@+id/switch_calendar"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintTop_toBottomOf="@id/week_calendar"
      app:layout_constraintBottom_toTopOf="@id/switch_view"/>

  <com.google.android.material.button.MaterialButton
      android:id="@+id/switch_view"
      style="@style/Theme.Ephemeris"
      android:text="Switch"
      app:cornerRadius="25dp"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/switch_calendar"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
